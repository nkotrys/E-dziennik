<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/classroom_background">

    <Button
        android:id="@+id/button7"
        android:layout_width="223dp"
        android:layout_height="71dp"
        android:layout_marginBottom="60dp"
        android:onClick="onClickPlan"
        android:text="plan zajęć"
        app:layout_constraintBottom_toTopOf="@+id/button26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="246dp"
        android:layout_height="78dp"
        android:onClick="onClickOceny"
        android:text="zobacz oceny"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673"
        app:rippleColor="#E02828" />

    <Button
        android:id="@+id/button26"
        android:layout_width="223dp"
        android:layout_height="83dp"
        android:layout_marginBottom="248dp"
        android:onClick="onClickWiadomosci"
        android:text="wiadomości"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>